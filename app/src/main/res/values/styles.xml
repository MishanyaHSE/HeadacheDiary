<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="InactiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ButtonStyle.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="SimpleSwitch" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorSurface">@color/gray_light</item>
    </style>

</resources>